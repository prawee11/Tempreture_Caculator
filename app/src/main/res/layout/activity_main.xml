<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/TbinpUsr"
        android:layout_width="262dp"
        android:layout_height="62dp"
        android:ems="10"
        android:hint="@string/Hint"
        android:inputType="numberDecimal"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074" />

    <RadioGroup
        android:id="@+id/Rdgrp"
        android:layout_width="349dp"
        android:layout_height="115dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TbinpUsr"
        app:layout_constraintVertical_bias="0.063">

        <RadioButton
            android:id="@+id/rbCel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/RadCel"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/RdFr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Farenhite"
            android:textSize="20sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnCalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Rdgrp" />

    <TextView
        android:id="@+id/lblAn"
        android:layout_width="169dp"
        android:layout_height="53dp"
        android:layout_marginEnd="72dp"
        android:text="@string/label"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnCalc"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="222dp"
        android:layout_height="236dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblAn"
        app:layout_constraintVertical_bias="0.562"
        app:srcCompat="@drawable/temp" />

</androidx.constraintlayout.widget.ConstraintLayout>